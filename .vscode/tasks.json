{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "fluid-build",
            "type": "process",
            "command": "node",
            "args": [
                "${workspaceRoot}/node_modules/@fluidframework/build-tools/dist/fluidBuild/fluidBuild.js",
                "--root",
                "${workspaceRoot}",
                "--vscode"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "base": "$tsc",
                    "fileLocation": "absolute"
                },
                "$tslint5"
            ]
        },
        {
            "label": "Build Current Tests",
            "type": "process",
            "command": "node",
            "args": [
                "${workspaceRoot}/node_modules/@fluidframework/build-tools/dist/fluidBuild/fluidBuild.js",
                "--root",
                "${workspaceRoot}",
                "--vscode",
                "-s",
                "tsc",
                "-s",
                "build:test",
                "${fileDirname}"
            ],
            "group": "build",
            "problemMatcher": [
                {
                    "base": "$tsc",
                    "fileLocation": "absolute"
                },
                "$tslint5"
            ]
        }
    ]
}

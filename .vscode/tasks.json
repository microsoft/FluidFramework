{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "fluid-build",
            "type": "process",
            "command": "node",
            "args": [
                "${workspaceRoot}/node_modules/@fluid-internal/fluid-build-tools/dist/fluidBuild.js",
                "--root",
                "${workspaceRoot}",
                "--vscode"
            ],
            "group": "build",
            "problemMatcher": [
                {
                    "base": "$tsc",
                    "fileLocation": "absolute",
                },
                "$tslint5"
            ]
        },
        {
            "label": "build-fluid-build-tools",
            "type": "shell",
            "command": "cd ${workspaceFolder}/tools/fluid-build-tools; npm run build",
            "problemMatcher": [],
        },
    ]
}
{
	"extends": "../../../../../common/build/build-common/tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"rootDir": ".",
		"outDir": "../../dist/build-cli",
		"module": "Node16",
		"moduleResolution": "Node16",
		"types": ["node"],
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"target": "ES2022",
		"noUncheckedIndexedAccess": false,
		"exactOptionalPropertyTypes": false,
	},
	"include": ["./**/*.ts", "./**/*.cts"],
	"exclude": ["./test/**/*"],
	"references": [
		{ "path": "../core" },
		{ "path": "../version-tools" },
		{ "path": "../build-infrastructure" },
		{ "path": "../bundle-size-tools" },
	],
}

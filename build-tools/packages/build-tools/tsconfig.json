{
	"extends": "../../../common/build/build-common/tsconfig.node16.json",
	"include": ["src/**/*.ts"],
	"exclude": ["src/test/**/*"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "es2022",
		"types": ["node"],
	},
}

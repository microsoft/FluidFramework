{
	"extends": "../../../common/build/build-common/tsconfig.node16.json",
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib",
		"types": ["node"],
		"noImplicitAny": true,
		"noUnusedLocals": false, // Checked in lint instead so unused variables do not block compilation
		"target": "ES2022",
		"noUncheckedIndexedAccess": false,
		"exactOptionalPropertyTypes": false,
	},
}

{
    "extends": "@fluidframework/build-common/ts-common-config.json",
    "exclude": ["dist", "node_modules"],
    "compilerOptions": {
        "target": "es6",
        "declarationDir": "./dist",
        "outDir": "./dist",
        "jsx": "react",
        // Added because upgrading to node 18 caused a bunch of typecheck errors
        "skipLibCheck": true,
        "types": [
            "jest",
            "puppeteer",
            "jest-environment-puppeteer",
            "expect-puppeteer",
            "react",
            "react-dom"
        ]
    },
    "include": ["src/**/*"]
}

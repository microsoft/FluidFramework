{
	"name": "@fluid-example/text-editor",
	"version": "2.81.0",
	"private": true,
	"description": "Minimal sample of SharedTree/React text editor integration.",
	"homepage": "https://fluidframework.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/FluidFramework.git",
		"directory": "examples/data-objects/text-editor"
	},
	"license": "MIT",
	"author": "Microsoft and contributors",
	"type": "module",
	"scripts": {
		"build": "fluid-build . --task build",
		"build:compile": "fluid-build . --task compile",
		"build:esnext": "tsc --project ./tsconfig.json",
		"build:test:esm": "tsc --project ./src/test/tsconfig.json",
		"check:biome": "biome check .",
		"check:format": "npm run check:biome",
		"clean": "rimraf --glob dist lib \"**/*.tsbuildinfo\" \"**/*.build.log\" nyc",
		"eslint": "eslint --quiet --format stylish src",
		"eslint:fix": "eslint --quiet --format stylish src --fix --fix-type problem,suggestion,layout",
		"format": "npm run format:biome",
		"format:biome": "biome check . --write",
		"lint": "fluid-build . --task lint",
		"lint:fix": "fluid-build . --task eslint:fix --task format",
		"prepack": "npm run webpack",
		"start": "npm run start:quill",
		"start:app": "webpack serve --config webpack.app.config.cjs",
		"start:docker": "webpack serve --config webpack.config.cjs --env mode=docker",
		"start:plaintext": "webpack serve --config webpack.config.cjs --env mode=local --env view=plaintext",
		"start:quill": "webpack serve --config webpack.config.cjs --env mode=local --env view=quill",
		"start:r11s": "webpack serve --config webpack.config.cjs --env mode=r11s",
		"start:spo": "webpack serve --config webpack.config.cjs --env mode=spo",
		"start:spo-df": "webpack serve --config webpack.config.cjs --env mode=spo-df",
		"test": "npm run test:mocha",
		"test:mocha": "npm run test:mocha:esm",
		"test:mocha:esm": "mocha",
		"tinylicious": "node ../../../node_modules/.pnpm/tinylicious@7.0.0/node_modules/tinylicious/dist/index.js",
		"webpack": "webpack --env production",
		"webpack:dev": "webpack --env development"
	},
	"dependencies": {
		"@fluid-example/example-utils": "workspace:~",
		"@fluidframework/azure-client": "workspace:~",
		"@fluidframework/react": "workspace:~",
		"@fluidframework/test-runtime-utils": "workspace:~",
		"@fluidframework/tree": "workspace:~",
		"fluid-framework": "workspace:~",
		"quill": "^2.0.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "~1.9.3",
		"@fluid-example/webpack-fluid-loader": "workspace:~",
		"@fluid-internal/mocha-test-setup": "workspace:~",
		"@fluidframework/build-common": "^2.0.3",
		"@fluidframework/build-tools": "^0.63.0",
		"@fluidframework/eslint-config-fluid": "workspace:~",
		"@testing-library/react": "^16.3.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^18.19.0",
		"@types/react": "^18.3.11",
		"@types/react-dom": "^18.3.1",
		"eslint": "~9.39.1",
		"eslint-plugin-react": "~7.37.5",
		"eslint-plugin-react-hooks": "~7.0.1",
		"global-jsdom": "^26.0.0",
		"html-webpack-plugin": "^5.6.0",
		"jiti": "^2.6.1",
		"mocha": "^10.8.2",
		"rimraf": "^6.1.2",
		"source-map-loader": "^5.0.0",
		"ts-loader": "^9.5.1",
		"typescript": "~5.4.5",
		"webpack": "^5.94.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "~4.15.2",
		"webpack-merge": "^6.0.1"
	},
	"fluid": {
		"browser": {
			"umd": {
				"files": [
					"dist/main.bundle.js"
				],
				"library": "main"
			}
		}
	},
	"typeValidation": {
		"disabled": true
	}
}

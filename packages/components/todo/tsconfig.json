{
    "extends": "@microsoft/fluid-build-common/ts-common-config.json",
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es6",
        "strict": false,
        "alwaysStrict": false,
        "module": "esnext",
        "outDir": "dist",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "react",
            "react-dom",
            "jest",
            "puppeteer",
            "jest-environment-puppeteer",
            "expect-puppeteer"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
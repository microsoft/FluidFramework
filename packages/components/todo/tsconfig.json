{
    "extends": "@microsoft/fluid-build-common/ts-common-config.json",
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es6",
        "strict": false,
        "alwaysStrict": false,
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "types": ["node", "react", "react-dom", "jest", "puppeteer", "jest-environment-puppeteer", "expect-puppeteer"]
    },
    "include": [
        "src/**/*"
    ]
}

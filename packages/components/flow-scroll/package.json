{
  "name": "@chaincode/flow-scroll",
  "description": "Experimental Flow-Editor virtualized scrolling demo.",
  "version": "0.5.0",
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "main": "dist/main.bundle.js",
  "module": "dist/main.bundle.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "css-d-ts": "tcm src",
    "build": "npm run build:compile",
    "build:compile": "npm run css-d-ts && npm run webpack",
    "build:esnext": "tsc --project ./tsconfig.esnext.json",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "clean": "rimraf dist lib *.tsbuildinfo package-deps.json *.build.log",
    "start": "prague-dev-server --config webpack.config.js --package package.json --env=\"development\"",
    "tsc": "tsc",
    "tslint": "tslint --project tsconfig.json --format verbose",
    "webpack": "webpack --env=\"production\"",
    "publish-local": "npm publish --registry http://localhost:4873",
    "publish-wu2": "npm run build && npm version patch && npm publish --registry https://packages.wu2.prague.office-int.com",
    "republish": "docker-compose stop verdaccio && docker-compose rm -f -v verdaccio && docker-compose create --force-recreate verdaccio && docker-compose start verdaccio && npm run publish-local"
  },
  "prague": {
    "browser": {
      "entrypoint": "main",
      "bundle": [
        "dist/main.bundle.js"
      ]
    }
  },
  "dependencies": {
    "@prague/component-runtime": "^0.5.0",
    "@chaincode/chart-view": "^0.5.0",
    "@chaincode/flow-document": "^0.5.0",
    "@chaincode/flow-editor": "^0.5.0",
    "@chaincode/math": "^0.5.0",
    "@chaincode/progress-bars": "^0.5.0",
    "@chaincode/table-document": "^0.5.0",
    "@chaincode/table-view": "^0.5.0",
    "@prague/app-component": "^0.5.0",
    "@prague/app-datastore": "^0.5.0",
    "@prague/container-definitions": "^0.5.0",
    "@prague/flow-util": "^0.5.0",
    "@prague/runtime-definitions": "^0.5.0",
    "@prague/utils": "^0.5.0",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@prague/build-common": "^0.5.0",
    "@prague/prague-dev-server": "^3.4.0",
    "@types/node": "^10.12.12",
    "concurrently": "^4.1.0",
    "css-loader": "^1.0.0",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.0",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "typed-css-modules": "^0.4.2",
    "typescript": "~3.4.5",
    "url-loader": "^1.1.1",
    "webpack": "^4.8.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.2"
  }
}

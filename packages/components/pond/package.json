    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  },
  "devDependencies": {
    "@microsoft/fluid-build-common": "^0.12.0",
    "@microsoft/fluid-webpack-component-loader": "^0.12.0",
    "@types/node": "^10.14.6",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "concurrently": "^4.1.0",
    "rimraf": "^2.6.2",
    "ts-loader": "^6.1.2",
    "tslint": "^5.20.0",
    "typescript": "~3.4.5",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.1.4"
  },
  "fluid": {
    "browser": {
      "umd": {
        "files": [
          "dist/main.bundle.js"
        ],
        "library": "main"
      }
    }
  }

{
  "name": "@chaincode/monaco",
  "version": "0.10.0",
  "description": "Monaco code editor",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": "false",
  "author": "Microsoft",
  "scripts": {
    "build": "concurrently npm:build:compile npm:tslint",
    "build:compile": "concurrently npm:tsc npm:build:esnext",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile && npm run webpack",
    "clean": "rimraf dist lib *.tsbuildinfo package-deps.json *.build.log",
    "tsc": "tsc",
    "build:esnext": "tsc --project ./tsconfig.esnext.json",
    "tslint": "tslint --project tsconfig.json --format verbose",
    "start": "webpack-dev-server --config webpack.config.js --package package.json",
    "start:local": "webpack-dev-server --config webpack.config.js --package package.json --env.local",
    "webpack": "webpack --env.production",
    "webpack:dev": "webpack --env.development",
    "deploy": "npm publish --registry https://packages.wu2.prague.office-int.com"
  },
  "dependencies": {
    "@prague/aqueduct": "^0.10.0",
    "@prague/component-core-interfaces": "^0.10.0",
    "@prague/container-definitions": "^0.10.0",
    "@prague/map": "^0.10.0",
    "@prague/merge-tree": "^0.10.0",
    "@prague/runtime-definitions": "^0.10.0",
    "@prague/sequence": "^0.10.0",
    "@prague/framework-definitions": "^0.10.0",
    "@types/node": "^10.12.12",
    "monaco-editor": "^0.15.6"
  },
  "devDependencies": {
    "@microsoft/fluid-webpack-component-loader": "^0.10.0",
    "@microsoft/fluid-build-common": "^0.10.0",
    "concurrently": "^4.1.0",
    "css-loader": "^1.0.0",
    "html-loader": "^0.5.5",
    "loader-utils": "^1.1.0",
    "monaco-editor-webpack-plugin": "^1.5.4",
    "node-sass": "^4.9.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.0",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "~3.4.5",
    "url-loader": "^1.1.1",
    "webpack": "^4.8.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.1.2"
  },
  "prague": {
    "browser": {
      "entrypoint": "main",
      "bundle": [
        "dist/main.bundle.js"
      ]
    }
  },
  "fluid": {
    "browser": {
      "umd": {
        "files": [
          "dist/main.bundle.js"
        ],
        "library": "main"
      }
    }
  },
  "license": "MIT"
}

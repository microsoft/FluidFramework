{
  "name": "@fluid-example/flow-util-lib",
  "version": "0.10.0",
  "description": "Shared utility code for Flow-* packages.",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "concurrently npm:build:compile npm:tslint",
    "build:compile": "concurrently npm:tsc npm:build:esnext npm:build:copy",
    "build:copy": "copyfiles -u 1 \"src/**/*.css\" dist/ && copyfiles -u 1 \"src/**/*.css\" lib/",
    "build:esnext": "tsc --project ./tsconfig.esnext.json",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "clean": "rimraf dist lib *.tsbuildinfo package-deps.json *.build.log",
    "test": "ts-mocha --recursive test/**/*.spec.ts --exit",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml --exit",
    "tsc": "tsc",
    "tslint": "tslint --project tsconfig.json --format verbose"
  },
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/fluid-build-common": "^0.10.0",
    "@types/benchmark": "^1.0.31",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "benchmark": "^2.1.4",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^12.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "~3.4.5"
  }
}

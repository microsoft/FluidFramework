{
  "name": "@microsoft/fluid-agent-scheduler",
  "description": "Component in charge of distributing agents across instances of a component",
  "version": "0.10.0",
  "author": "Microsoft",
  "repository": "microsoft/FluidFramework",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "concurrently npm:build:compile npm:tslint",
    "build:compile": "concurrently npm:tsc npm:build:esnext",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "clean": "rimraf dist lib *.tsbuildinfo package-deps.json *.build.log",
    "tsc": "tsc",
    "build:esnext": "tsc --project ./tsconfig.esnext.json",
    "tslint": "tslint --project tsconfig.json --format verbose",
    "dev": "npm run build:dev -- --watch",
    "publish-local": "npm publish --registry http://localhost:4873",
    "publish-wu2": "npm run build && npm publish --registry https://packages.wu2.prague.office-int.com",
    "publish-patch-local": "npm version patch && npm run publish-local",
    "republish": "docker-compose stop verdaccio && docker-compose rm -f -v verdaccio && docker-compose create --force-recreate verdaccio && docker-compose start verdaccio && npm run publish-local",
    "test": "mocha --recursive dist/test --exit",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output",
    "cache-dir": "nyc/.cache",
    "report-dir": "nyc/report"
  },
  "prague": {
    "browser": {
      "entrypoint": "main",
      "bundle": [
        "dist/main.bundle.js"
      ]
    }
  },
  "fluid": {
    "browser": {
      "umd": {
        "files": [
          "dist/main.bundle.js"
        ],
        "library": "main"
      }
    }
  },
  "dependencies": {
    "@microsoft/fluid-component-core-interfaces": "^0.10.0",
    "@microsoft/fluid-component-runtime": "^0.10.0",
    "@microsoft/fluid-register-collection": "^0.10.0",
    "@microsoft/fluid-map": "^0.10.0",
    "@microsoft/fluid-runtime-definitions": "^0.10.0",
    "@microsoft/fluid-shared-object-base": "^0.10.0",
    "@microsoft/fluid-container-definitions": "^0.10.0",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@microsoft/fluid-build-common": "^0.10.0",
    "@types/debug": "^0.0.31",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "concurrently": "^4.1.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "~3.4.5",
    "webpack": "^4.8.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.2"
  },
  "license": "MIT"
}

{
	"extends": "@fluidframework/build-common/ts-common-config.json",
	"exclude": ["src/test/**/*"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"noImplicitAny": true,
		"composite": true,
		"preserveConstEnums": true,
		// TODO: enforce "_" prefix for unused locals in linter and/or remove this and come up with a different pattern for type assertions.
		"noUnusedLocals": false,
	},
	"include": ["src/**/*"],
}

{
	"extends": "../../../../../common/build/build-common/tsconfig.test.node16.json",
	"compilerOptions": {
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noImplicitOverride": true,
		// ES2022 code can do more things with schema classes than es2020 code, including hit the defineProperty hook in our proxies.
		// To be able to test that this works properly (including that ArrayNodes give their improved errors), these tests target ES2022.
		"target": "ES2022",
		"rootDir": "./",
		"outDir": "../../lib/test",
		"types": ["node", "mocha"],
		"noUncheckedIndexedAccess": false,
		"exactOptionalPropertyTypes": false,

		// Lib check allows detecting compile errors in our emitted d.ts files which could impact customers
		// (either just by bring broken, or because they use LibCheck).
		// The exporter test project contains cases which have produced compile errors in d.ts files in the past, and this validates that they have not regressed.
		"skipLibCheck": false,
	},
	"include": ["./**/*"],
	"exclude": ["export-testing/exporter/**/*"],
	"references": [
		{
			"path": "../../tsconfig.json",
		},
		{
			"path": "./export-testing/exporter/tsconfig.json",
		},
	],
}

{
	"extends": [
		"../../../../../common/build/build-common/tsconfig.base.json",
		"../../../../../common/build/build-common/tsconfig.test.json",
	],
	"include": ["./**/*"],
	"references": [
		{
			"path": "../..",
		},
	],
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "../../dist/test",
		"types": ["mocha", "node"],

		// The sequence package uses test code from merge-tree, so we need to build types for test files, which we typically
		// don't do.
		"declaration": true,
		"declarationMap": true,
		"noImplicitAny": false,
	},
}

{
	"extends": "../../../common/build/build-common/tsconfig.node16.json",
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib",
		// Allow unused locals.
		// This is needed for type assertions.
		"noUnusedLocals": false,
		"noImplicitOverride": true,
		"exactOptionalPropertyTypes": false,
	},
}

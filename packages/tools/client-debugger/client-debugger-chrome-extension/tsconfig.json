{
	"extends": "@fluidframework/build-common/ts-common-config.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"composite": true,
		"types": ["chrome", "jest", "node", "puppeteer"],
		"jsx": "react-jsx",
		"module": "es6",
		"target": "es2018",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
	},
	"include": ["src/**/*"],
}

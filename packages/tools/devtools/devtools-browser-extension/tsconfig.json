{
	"extends": "@fluidframework/build-common/ts-common-config.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist/tsc",
		"composite": true,
		"types": [
			"chai",
			"chrome",
			"mocha",
			"node",
			"jest",
			"puppeteer",
			"jest-environment-puppeteer",
			"expect-puppeteer",
			"jsdom",
			"react",
			"react-dom",
		],
		"jsx": "react-jsx",
		"target": "es2018",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
	},
	"include": ["src/**/*"],
}

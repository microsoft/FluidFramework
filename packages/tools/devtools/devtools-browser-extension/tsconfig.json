{
	"extends": "@fluidframework/build-common/ts-common-config.json",
	"compilerOptions": {
		"module": "esnext",
		"lib": ["ESNext", "DOM"],
		"rootDir": "src",
		"outDir": "dist/tsc",
		"composite": true,
		"types": ["chai", "chrome", "mocha", "node"],
		"jsx": "react-jsx",
		"target": "es2018",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
	},
	"include": ["src/**/*"],
}

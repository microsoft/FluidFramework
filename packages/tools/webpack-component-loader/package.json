{
  "name": "@microsoft/fluid-webpack-component-loader",
  "version": "0.11.0",
  "description": "Component loader for webpack-dev-server",
  "repository": "microsoft/FluidFramework",
  "license": "MIT",
  "author": "Microsoft",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "concurrently npm:build:compile npm:tslint",
    "build:compile": "concurrently npm:tsc npm:build:esnext npm:webpack",
    "build:esnext": "tsc --project ./tsconfig.esnext.json",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "clean": "rimraf dist lib *.tsbuildinfo package-deps.json *.build.log",
    "deploy": "npm publish --registry https://packages.wu2.prague.office-int.com",
    "eslint": "eslint --ext=ts,tsx --format stylish src",
    "test": "mocha --recursive dist/test --exit",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml",
    "tsc": "tsc",
    "tslint": "tslint --project tsconfig.json --format verbose",
    "webpack": "webpack --color --config webpack.config.js"
  },
  "dependencies": {
    "@microsoft/fluid-aqueduct": "^0.11.0",
    "@microsoft/fluid-base-host": "^0.11.0",
    "@microsoft/fluid-component-core-interfaces": "^0.11.0",
    "@microsoft/fluid-container-definitions": "^0.11.0",
    "@microsoft/fluid-local-test-server": "^0.11.0",
    "@microsoft/fluid-protocol-definitions": "^0.11.0",
    "@microsoft/fluid-routerlicious-driver": "^0.11.0",
    "@microsoft/fluid-server-services-core": "^0.11.0",
    "@microsoft/fluid-server-test-utils": "^0.11.0",
    "@microsoft/fluid-web-code-loader": "^0.11.0",
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.4.0",
    "moniker": "^0.1.2",
    "nconf": "^0.10.0",
    "uuid": "^3.3.2",
    "webpack-dev-server": "^3.8.0"
  },
  "devDependencies": {
    "@microsoft/eslint-config-fluid": "^0.11.0",
    "@microsoft/fluid-build-common": "^0.11.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "concurrently": "^4.1.0",
    "eslint": "^6.5.1",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^14.1.1",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "~3.4.5",
    "webpack": "^4.8.2",
    "webpack-cli": "^3.1.2"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output",
    "cache-dir": "nyc/.cache",
    "report-dir": "nyc/report"
  }
}

{
  "name": "@microsoft/fluid-merge-tree",
  "version": "0.12.0",
  "description": "Merge tree",
  "repository": "microsoft/FluidFramework",
  "license": "MIT",
  "author": "Microsoft",
  "sideEffects": "false",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "concurrently npm:build:compile npm:tslint",
    "build:compile": "concurrently npm:tsc npm:build:esnext",
    "build:compile:min": "npm run build:compile",
    "build:docs": "echo \"Skipping @microsoft/fluid-merge-tree; see https://github.com/microsoft/Prague/issues/2270\"",
    "build:esnext": "tsc --project ./tsconfig.esnext.json",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "build:test": "npm run tsc && npm run test",
    "clean": "rimraf dist lib *.tsbuildinfo *.build.log",
    "eslint": "eslint --ext=ts,tsx --format stylish src",
    "eslint:fix": "eslint --ext=ts,tsx --format stylish src --fix",
    "test": "mocha --recursive dist/test --exit",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml",
    "tsc": "tsc",
    "tslint": "tslint --project tsconfig.json --format verbose"
  },
  "dependencies": {
    "@microsoft/fluid-common-definitions": "^0.12.0",
    "@microsoft/fluid-component-core-interfaces": "^0.12.0",
    "@microsoft/fluid-core-utils": "^0.12.0",
    "@microsoft/fluid-protocol-definitions": "^0.12.0",
    "@microsoft/fluid-runtime-definitions": "^0.12.0"
  },
  "devDependencies": {
    "@microsoft/eslint-config-fluid": "^0.12.0",
    "@microsoft/fluid-build-common": "^0.12.0",
    "@microsoft/fluid-test-runtime-utils": "^0.12.0",
    "@types/diff": "^3.5.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.14.6",
    "@types/random-js": "^1.0.31",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "concurrently": "^4.1.0",
    "diff": "^3.5.0",
    "eslint": "^6.7.1",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^14.1.1",
    "random-js": "^1.0.8",
    "rimraf": "^2.6.2",
    "tslint": "^5.20.0",
    "typescript": "~3.4.5"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output",
    "cache-dir": "nyc/.cache",
    "report-dir": "nyc/report"
  }
}

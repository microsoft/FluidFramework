{
  "name": "@microsoft/fluid-merge-tree",
  "version": "0.10.0",
  "description": "Merge tree",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": "false",
  "scripts": {
    "build": "concurrently npm:build:compile npm:tslint",
    "build:compile": "concurrently npm:tsc npm:build:esnext",
    "build:docs": "echo \"Skipping @microsoft/fluid-merge-tree; see https://github.com/microsoft/Prague/issues/2270\"",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "build:test": "npm run tsc && npm run test",
    "clean": "rimraf dist lib *.tsbuildinfo package-deps.json *.build.log",
    "tsc": "tsc",
    "build:esnext": "tsc --project ./tsconfig.esnext.json",
    "test": "mocha --recursive dist/test --exit",
    "test:coverage": "nyc npm test -- --reporter mocha-junit-reporter --reporter-options mochaFile=nyc/junit-report.xml",
    "tslint": "tslint --project tsconfig.json --format verbose"
  },
  "author": "Microsoft",
  "repository": "microsoft/prague",
  "nyc": {
    "all": true,
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output",
    "cache-dir": "nyc/.cache",
    "report-dir": "nyc/report"
  },
  "devDependencies": {
    "@microsoft/fluid-build-common": "^0.10.0",
    "@microsoft/fluid-test-runtime-utils": "^0.10.0",
    "@types/diff": "^3.5.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "@types/random-js": "^1.0.31",
    "concurrently": "^4.1.0",
    "diff": "^3.5.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nyc": "^14.1.1",
    "random-js": "^1.0.8",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "~3.4.5"
  },
  "dependencies": {
    "@microsoft/fluid-component-core-interfaces": "^0.10.0",
    "@microsoft/fluid-container-definitions": "^0.10.0",
    "@microsoft/fluid-protocol-definitions": "^0.10.0",
    "@microsoft/fluid-runtime-definitions": "^0.10.0",
    "@microsoft/fluid-core-utils": "^0.10.0"
  },
  "license": "MIT"
}

{    
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "rootDir": "./src",
        "sourceMap": true,
        "inlineSources": true,
        "typeRoots": [ "./node_modules/@types" ]
    },
    "include": [
        "src/**/*"
    ]
}

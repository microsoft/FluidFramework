{
  "name": "@fluidframework/build-tools",
  "version": "0.2.0",
  "description": "Fluid Build tool",
  "homepage": "https://fluidframework.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/FluidFramework.git",
    "directory": "tools/build-tools"
  },
  "license": "MIT",
  "author": "Microsoft and contributors",
  "main": "dist/fluidBuild/fluidBuild.js",
  "bin": {
    "fluid-build": "bin/fluid-build",
    "fluid-build-version": "bin/fluid-build-version",
    "fluid-bump-version": "bin/fluid-bump-version",
    "fluid-collect-bundle-analyses": "bin/fluid-collect-bundle-analyses",
    "fluid-doc-stats": "bin/fluid-doc-stats",
    "fluid-layer-check": "bin/fluid-layer-check",
    "fluid-repo-policy-check": "bin/fluid-repo-policy-check",
    "fluid-run-bundle-analyses": "bin/fluid-run-bundle-analyses",
    "fluid-type-validator": "bin/fluid-type-validator"
  },
  "scripts": {
    "build": "tsc -b && npm run build:test",
    "build:test": "tsc --project ./src/test/tsconfig.json",
    "debug:layer-check": "node --inspect-brk dist/layerCheck/layerCheck.js --root ../..",
    "layer-check": "node dist/layerCheck/layerCheck.js --root ../..",
    "layer-check:doc": "node dist/layerCheck/layerCheck.js --root ../.. --md",
    "list-repo-files": "cd ../.. && git ls-files -co --exclude-standard",
    "policy-check": "cd ../.. && node tools/build-tools/dist/repoPolicyCheck/repoPolicyCheck.js",
    "policy-check:debug": "cd ../.. && node --inspect-brk tools/build-tools/dist/repoPolicyCheck/repoPolicyCheck.js ",
    "policy-check:fix": "npm run policy-check -- -r",
    "policy-check:fix:debug": "cd ../.. && node --inspect-brk tools/build-tools/dist/repoPolicyCheck/repoPolicyCheck.js -r",
    "test": "mocha --recursive dist/test --unhandled-rejections=strict --timeout 15000"
  },
  "dependencies": {
    "@fluidframework/bundle-size-tools": "^0.0.8505",
    "async": "^3.2.0",
    "chalk": "^2.4.2",
    "commander": "^6.2.1",
    "danger": "^10.9.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.3",
    "ignore": "^5.1.8",
    "json5": "^2.1.3",
    "lodash.isequal": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "minimatch": "^3.0.4",
    "npm-package-json-lint": "^6.0.0",
    "replace-in-file": "^6.0.0",
    "rimraf": "^2.6.2",
    "semver": "^7.1.2",
    "shelljs": "^0.8.4",
    "sort-package-json": "1.54.0",
    "ts-morph": "^7.1.2"
  },
  "devDependencies": {
    "@types/async": "^3.2.6",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/json5": "^0.0.30",
    "@types/lodash.isequal": "^4.5.5",
    "@types/lodash.merge": "^4.6.6",
    "@types/minimatch": "3.0.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.0",
    "@types/rimraf": "^2.0.3",
    "@types/semver": "^7.1.0",
    "@types/shelljs": "^0.8.8",
    "@types/webpack": "^4.41.22",
    "mocha": "^10.0.0",
    "typescript": "~4.5.5"
  }
}

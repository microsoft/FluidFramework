{
  "name": "@fluid-tools/api-markdown-documenter",
  "version": "0.6.0",
  "description": "Processes .api.json files generated by API-Extractor and generates Markdown documentation from them.",
  "homepage": "https://fluidframework.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/FluidFramework.git",
    "directory": "packages/tools/api-markdown-documenter"
  },
  "license": "MIT",
  "author": "Microsoft and contributors",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:genver && concurrently npm:build:compile npm:lint && npm run build:docs",
    "build:compile": "concurrently npm:tsc npm:build:copy",
    "build:copy": "copyfiles \"src/test/test-data/**\" dist --up 1",
    "build:docs": "api-extractor run --local && copyfiles -u 1 ./_api-extractor-temp/doc-models/* ../../_api-extractor-temp/",
    "build:full": "npm run build",
    "build:full:compile": "npm run build:compile",
    "build:genver": "gen-version",
    "build:tsc": "tsc --pretty",
    "ci:build:docs": "api-extractor run && copyfiles -u 1 ./_api-extractor-temp/doc-models/* ../../_api-extractor-temp/",
    "clean": "rimraf _api-extractor-temp .nyc_output dist *.tsbuildinfo *.build.log",
    "eslint": "eslint src",
    "eslint:fix": "eslint src --fix",
    "format": "npm run prettier:fix",
    "format-and-build": "npm run format && npm run build",
    "lint": "npm run prettier && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "npm run test:mocha",
    "test:coverage": "nyc npm test -- --reporter xunit --reporter-option output=nyc/junit-report.xml",
    "test:mocha": "mocha dist/**/*.test.js --unhandled-rejections=strict",
    "tsc": "tsc"
  },
  "nyc": {
    "all": true,
    "cache-dir": "nyc/.cache",
    "exclude": [
      "src/test/**/*.ts",
      "dist/test/**/*.js"
    ],
    "exclude-after-remap": false,
    "include": [
      "src/**/*.ts",
      "dist/**/*.js"
    ],
    "report-dir": "nyc/report",
    "reporter": [
      "cobertura",
      "html",
      "text"
    ],
    "temp-directory": "nyc/.nyc_output"
  },
  "dependencies": {
    "@microsoft/api-documenter": "7.19.2",
    "@microsoft/api-extractor-model": "^7.23.0",
    "@microsoft/tsdoc": "^0.14.1",
    "@rushstack/node-core-library": "^3.50.1",
    "chalk": "^2.4.2"
  },
  "devDependencies": {
    "@fluidframework/build-common": "^1.0.0",
    "@fluidframework/build-tools": "^0.5.0",
    "@fluidframework/eslint-config-fluid": "^1.1.0",
    "@fluidframework/mocha-test-setup": "^1.2.5",
    "@fluidframework/test-utils": "^1.2.5",
    "@microsoft/api-extractor": "^7.22.2",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/chai": "^4",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.1",
    "chai": "^4.2.0",
    "concurrently": "^6.2.0",
    "copyfiles": "^2.4.1",
    "dir-compare": "^4.0.0",
    "eslint": "~8.6.0",
    "eslint-config-prettier": "~8.5.0",
    "fs-extra": "^10.1.0",
    "mocha": "^10.0.0",
    "nyc": "^15.0.0",
    "prettier": "~2.6.2",
    "rimraf": "^2.6.2",
    "typescript": "~4.5.5"
  }
}

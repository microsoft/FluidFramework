{
    "name": "Bohemia Intercept Chrome Extension",
    "version": "1.0",
    "description": "Inject a Fluid component into Bohemia",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.fluidpreview.office.net/*",
        "https://*.microsoft.sharepoint-df.com/*",
        "https://*.microsoft-my.sharepoint.com/*",
        "https://*.microsoft-my.sharepoint-df.com/*",
        "https://*.microsofteur-my.sharepoint.com/*",
        "http://localhost:8080/*",
        "http://localhost:3000/*"
    ],
    "icons": {
        "48": "images/fluid48.png",
        "96": "images/fluid96.png",
        "192": "images/fluid192.png"
    },
    "devtools_page": "devtools.html",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "web_accessible_resources": [
        "localhost:3000",
        "localhost:8080"
    ]
}

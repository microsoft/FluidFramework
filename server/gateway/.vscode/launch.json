    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "address": "localhost",
            "port": 5888,
            "restart": true,
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/server",
            "outFiles": [ "${workspaceFolder}/dist/**/*.js" ],
            "protocol":"inspector",
            "trace": "sm"
        }
    ]
}
{
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"inlineSources": true,
		"sourceMap": true,
		"typeRoots": ["./node_modules/@types"],
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"target": "es6",
		"skipLibCheck": true,
	},
}

{
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "useUnknownInCatchVariables": false,
        "target": "es6",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "outDir": "dist",
        "rootDir": "./src",
        "sourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}

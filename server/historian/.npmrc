engine-strict=true
frozen-lockfile=true
strict-peer-dependencies=true
link-workspace-packages=true

# ESLint v8 resolves plugins from the project directory rather than the shared config's
# virtual store directory. public-hoist-pattern ensures ESLint plugins are accessible
# from the workspace root so they can be found in Docker builds.
public-hoist-pattern[]=*eslint*

# Disable pnpm update notifications since we use corepack to install package managers
update-notifier=false
# Use the number of cores on the machine by default.
workspace-concurrency=0

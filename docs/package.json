{
  "name": "fluid-docs",
  "version": "0.13.0",
  "private": true,
  "description": "Documentation for the Fluid Framework",
  "license": "MIT",
  "author": "Microsoft",
  "scripts": {
    "build": "npm run build:vuepress",
    "build:ci": "npm run build:copy && node updateMarkdown.js && npm run build:ci:vuepress",
    "build:ci:vuepress": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" vuepress build --dest ./dist --cache .cache --workers 7",
    "build:copy": "npm run build:copy:api && npm run build:copy:fluid",
    "build:copy:api": "copyfiles -f \"api-pages/**\" api/",
    "build:copy:fluid": "copyfiles -f \"node_modules/@fluidframework/local-web-host/dist/**\" .vuepress/public/fluid/local-web-host && copyfiles -f \"node_modules/@fluid-example/sudoku/dist/**\" .vuepress/public/fluid/sudoku && copyfiles -f \"node_modules/@fluid-example/diceroller/dist/**\" .vuepress/public/fluid/diceroller && copyfiles -f \"node_modules/@fluid-example/badge/dist/**\" .vuepress/public/fluid/badge",
    "build:external": "npm run build:external:delete && npm run build:external:vuepress",
    "build:external:delete": "rimraf ./advanced/ ./contributing/ ./faq/ ./misc/ ./patterns ./server/ ./team/ ./tools/ guide/water-park.md guide/yo-fluid.md ./how/developer-guide.md",
    "build:external:vuepress": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" FLUID_VAR_GROUP=external vuepress build --dest ./dist --cache .cache --workers 7",
    "build:vuepress": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" VUEPRESS_BASE=\"/\" vuepress build --dest ./dist --cache .cache",
    "clean": "rimraf api dist .vuepress/public/fluid/*/**",
    "lint": "vuepress check-md",
    "start": "npm run build:copy && node updateMarkdown.js && npm run start:vuepress",
    "start:vuepress": "cross-env VUEPRESS_BASE=\"/\" vuepress dev --port 8080 --no-clear-screen --cache .cache"
  },
  "dependencies": {
    "@fluid-example/badge": "^0.19.0",
    "@fluid-example/diceroller": "^0.19.0",
    "@fluid-example/sudoku": "^0.19.0",
    "@fluidframework/local-web-host": "^0.19.0",
    "@vuepress/plugin-pwa": "^1.4.0",
    "copyfiles": "^2.3.0",
    "firstline": "^2.0.2",
    "fs-extra": "^9.0.1",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-include": "^1.1.1",
    "markdown-it-regexp": "^0.4.0",
    "markdown-it-replacements": "^1.0.1",
    "markdown-it-smartarrows": "^1.0.1",
    "mermaid": "^8.5.1",
    "vue-markdown": "^2.2.4",
    "vue-tabs-component": "^1.5.0",
    "vuepress": "^1.4.0",
    "vuepress-plugin-check-md": "0.0.2",
    "vuepress-plugin-code-copy": "^1.0.6",
    "vuepress-plugin-container": "^2.1.2",
    "vuepress-plugin-tabs": "^0.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2"
  }
}

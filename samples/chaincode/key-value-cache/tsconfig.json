{    
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "lib": ["es2017", "dom"],
        "incremental": true,
        "types": []
    },
    "include": [
        "src/**/*"
    ]
}

{
    "extends": "@fluidframework/build-common/ts-common-config.json",
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "useUnknownInCatchVariables": false,
        "module": "esnext",
        "lib": ["ESNext", "DOM"],
        "outDir": "dist",
        "jsx": "react",
        "types": ["react", "react-dom", "jest", "puppeteer", "jest-environment-puppeteer", "expect-puppeteer"]
    },
    "include": [
        "src/**/*"
    ]
}

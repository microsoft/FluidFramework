{
	"extends": "../../../../common/build/build-common/tsconfig.node16.json",
	"exclude": ["src/test/**/*"],
	"compilerOptions": {
		"downlevelIteration": true,
		"noUnusedLocals": false,
		"outDir": "./lib",
		"rootDir": "./src",
		// Types for 'node' are required by the 'msgpackr' dependency's 'index.d.ts',
		// even thought we avoid the node-specific functionality at runtime.
		"types": ["node"],
	},
	"include": ["src/**/*"],
}

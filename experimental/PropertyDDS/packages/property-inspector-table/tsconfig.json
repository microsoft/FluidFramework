{
  "extends": "@fluidframework/build-common/ts-common-config.json",
  "compilerOptions": {
    "jsx": "react",
    "resolveJsonModule": true,
    "typeRoots": [
      "../node_modules/@types",
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./assets/**/*",
    "./custom.d.ts"
  ],
  "exclude": [
    "./src/**/*.stories.*"
  ]
}

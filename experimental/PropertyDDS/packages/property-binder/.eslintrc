{
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"requireConfigFile": false,
		"babelOptions": {
			"plugins": [["@babel/plugin-proposal-decorators", { "legacy": true }]]
		}
	},
	"rules": {
		"linebreak-style": 0,
		"prefer-const": ["warn"],
		"camelcase": 0,
		"object-curly-spacing": 0,
		"one-var": 0,
		"padded-blocks": 0,
		"indent-legacy": 0,
		"spaced-comment": [2, "always", { "exceptions": ["!", "-", "*", "=", "/"] }],
		"lines-between-class-members": ["error", "always"],
		"tsdoc/syntax": "off"
	}
}

{
	"extends": "@fluidframework/build-common/ts-common-config.json",
	"exclude": ["src/test/**/*"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib",
		"module": "Node16",
		"moduleResolution": "Node16",
		"noImplicitAny": true,
		"composite": true,
		"noImplicitOverride": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
	},
	"include": ["src/**/*"],
}
